<Window x:Class="Gallery_fixed.RegLogDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegLogDialog" Height="303" Width="284" ResizeMode="NoResize">
    <StackPanel>
        <Label Margin="5" Content="Имя пользователя" FontFamily="Verdana" FontSize="15"/>
        <TextBox x:Name="tbName" Margin="5,0,20,0"/>
        <Label Margin="5" Content="Пароль" FontFamily="Verdana" FontSize="15"/>
        <TextBox x:Name="tbPass" Margin="5,0,20,0"/>
        <WrapPanel Margin="0,120,0,0">
            <Button Margin="5,5,138,5" Content="Cancel" FontFamily="Verdana" FontSize="15" Click="Button_Click_2"/>
            <Button Margin="5" Content="Confirm" FontFamily="Verdana" FontSize="15" Click="Button_Click_1"/>
        </WrapPanel>
    </StackPanel>
</Window>
