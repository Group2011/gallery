<Window x:Class="Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="506.716" Width="744.403" Closing="Window_Closing" WindowStyle="ToolWindow">
    <Window.Resources>
        <SolidColorBrush Color="Blue" x:Key="tagBrush"></SolidColorBrush>
        <Style x:Key="TagDefaultStyle">
            <Setter Property="Control.FontSize" Value="12"></Setter>
            <Setter Property="Control.Padding" Value="5"></Setter>
            <Setter Property="Control.Foreground" Value="{StaticResource tagBrush}"></Setter>
        </Style>
        <Style x:Key="TagMouseEntertStyle">
            <Setter Property="Control.FontSize" Value="18"></Setter>
            <Setter Property="Control.FontWeight" Value="Bold"></Setter>
            <Setter Property="Control.Padding" Value="5"></Setter>
            <Setter Property="Control.Foreground" Value="{StaticResource tagBrush}"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel>
        <StackPanel>
            <DockPanel>
                <DockPanel DockPanel.Dock="Right">
                    <WrapPanel DockPanel.Dock="Left">
                        <Label Content="Зарегистрироваться" Visibility="Hidden" x:Name="RegisterAction"/>
                        <Label Content="Регистрация" MouseDown="Label_MouseDown_1" x:Name="RegisterLabel"/>
                        <Label Content="Вход" MouseDown="Login_MouseDown"/>
                    </WrapPanel>
                </DockPanel>
                <WrapPanel Visibility="Hidden" x:Name="Login">
                    <TextBox x:Name="tbLogin" Text="Login" MinWidth="100"/>
                    <TextBox x:Name="tbPass" Text="Password" MinWidth="100" Margin="10 0 0 0"/>
                </WrapPanel>
                <WrapPanel Visibility="Hidden" x:Name="Register">
                    <TextBox x:Name="tbConfirmPass" Text="Confirm Password" MinWidth="100" Margin="10 0 0 0"/>
                </WrapPanel>
            </DockPanel>

            <DockPanel>
                <TextBox ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="Collapsed" HorizontalAlignment="Stretch" DockPanel.Dock="Top" TextWrapping="Wrap" AcceptsReturn="True" x:Name="tbSearch">dsadsa</TextBox>
                <Button Content="Поиск" x:Name="btnSearch" Click="btnSearch_Click"/>
            </DockPanel>
        </StackPanel>
        <WrapPanel Margin="0 10 0 0" x:Name="Tags">
            <Label Content="Случайные" Margin="10 0 0 0"/>
            <Label Content="Последние" Margin="10 0 0 0"/>
            <Label Content="Популярные" Margin="10 0 0 0"/>
            <Label Content="Теги ..." Margin="10 0 0 0" MouseDown="Label_MouseDown_2" x:Name="tagbtn"/>
            <Canvas x:Name="tagcloud" Visibility="Collapsed"></Canvas>
        </WrapPanel>
        <Canvas>
            <Border BorderBrush="Black" Height="100" Width="100" BorderThickness="1" Canvas.Left="10" Canvas.Top="169">
                <Image x:Name="smallLeftIMG"></Image>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Height="146" Width="146" Canvas.Left="119" Canvas.Top="123">
                <Image x:Name="mediumLeftIMG" Margin="1,-1,-1,1"></Image>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Height="200" Width="200" Canvas.Left="270" Canvas.Top="69">
                <Image x:Name="largeIMG"></Image>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Height="146" Width="146" Canvas.Left="475" Canvas.Top="123">
                <Image x:Name="mediumRightIMG"></Image>
            </Border>
            <Border Height="100" BorderBrush="Black" BorderThickness="1" Width="100" Canvas.Left="626" Canvas.Top="169">
                <Image x:Name="smallRightImg"></Image>
            </Border>
            <Border Height="100" Width="100" Canvas.Top="274" Canvas.Left="10">
                <Image x:Name="mirrorSmallLeftIMG" RenderTransformOrigin="0.5,0.5" Canvas.Left="39" Canvas.Top="342">
                    <Image.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0.46"/>
                            <GradientStop Color="#500000" Offset="1"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>
            <Border Height="146" Width="146" Canvas.Left="119" Canvas.Top="274">
                <Image x:Name="mirrorMediumLeftIMG" RenderTransformOrigin="0.5,0.5" Canvas.Left="214" Canvas.Top="574" >
                    <Image.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0.46"/>
                            <GradientStop Color="#500000" Offset="1"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>
            <Border Height="200" Width="200" Canvas.Left="270" Canvas.Top="274">
                <Image x:Name="mirrorLargeIMG" RenderTransformOrigin="0.5,0.5" Canvas.Left="465" Canvas.Top="671">
                    <Image.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0.46"/>
                            <GradientStop Color="#500000" Offset="1"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>
            <Border Height="146" Width="146" Canvas.Left="475" Canvas.Top="274">
                <Image x:Name="mirrorMediumRightIMG" RenderTransformOrigin="0.5,0.5" Canvas.Left="779" Canvas.Top="575">
                    <Image.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0.46"/>
                            <GradientStop Color="#500000" Offset="1"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>
            <Border Height="100" Width="100" Canvas.Left="626" Canvas.Top="274">
                <Image x:Name="mirrorSmallRightIMG" RenderTransformOrigin="0.5,0.5" Canvas.Left="1006" Canvas.Top="506">
                    <Image.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0.46"/>
                            <GradientStop Color="#500000" Offset="1"/>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>
        </Canvas>
        <Grid>
            <Button Background="Beige" FontFamily="Verdana" FontSize="20" Width="100" Margin="5,1,1,1" HorizontalAlignment="Left" Click="Button_Click_2" Content="Prev"/>
            <Button Background="Beige" FontFamily="Verdana" FontSize="20" Width="100" Margin="5,1,5,1" HorizontalAlignment="Center" Content="Show" Click="Button_Click_3"/>
            <Button Background="Beige" FontFamily="Verdana" FontSize="20" Width="100" Margin="5,1,1,1" HorizontalAlignment="Right" Click="Button_Click_1" Content="Next"/>
        </Grid>
    </StackPanel>
</Window>
